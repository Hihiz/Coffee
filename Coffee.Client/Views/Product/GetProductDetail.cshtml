@model Coffee.Client.Dto.ProductDetailDto

@{
    ViewData["Title"] = "Детали продукта";
}

<!-- Start Content-->
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item active">Детали продукта</li>
                    </ol>
                </div>
                <h4 class="page-title">Детали продукта</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-5">
                            <!-- Product image -->
                            <a href="javascript: void(0);" class="text-center d-block mb-4">
                                <img src="~/Images/@Model.Image" class="img-fluid" style="max-width: 280px;" alt="Product-img" />
                            </a>

                            <div class="d-lg-flex d-none justify-content-center">
                                <a href="javascript: void(0);">
                                    <img src="~/Images/@Model.Image" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img" />
                                </a>
                                <a href="javascript: void(0);" class="ms-2">
                                    <img src="~/Images/@Model.Image" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img" />
                                </a>
                                <a href="javascript: void(0);" class="ms-2">
                                    <img src="~/Images/@Model.Image" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img" />
                                </a>
                            </div>
                        </div> <!-- end col -->
                        <div class="col-lg-7">
                            <form class="ps-lg-4">
                                <!-- Product title -->
                                <h3 class="mt-0">
                                    @Model.Name
                                    @if (ViewBag.userRole == "Admin")
                                    {
                                        <a asp-action="UpdateProduct" asp-route-id="@Model.Id" class="text-muted"><i class="mdi mdi-square-edit-outline ms-2"></i></a>
                                    }
                                </h3>
                                <p class="mb-1">Дата добавления: 09/12/2018</p>
                                <p class="font-16">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <span class="text-warning mdi mdi-star"></span>
                                    }
                                </p>

                                <!-- Product stock -->
                                <div class="mt-3">
                                    <h4><span class="badge badge-success-lighten">В наличии</span></h4>
                                </div>

                                <!-- Product description -->
                                <div class="mt-4">
                                    <h6 class="font-14">Цена:</h6>
                                    <h3> @Model.Price руб</h3>
                                </div>

                                <!-- Product description -->
                                <div class="mt-4">
                                    <h6 class="font-14">Описание:</h6>
                                    <p>@Model.Description</p>
                                </div>
                            </form>
                        </div> <!-- end col -->
                    </div> <!-- end row-->
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div> <!-- end col-->
    </div>
    <!-- end row-->
</div> <!-- container -->