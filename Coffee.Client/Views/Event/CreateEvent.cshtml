@model Coffee.Client.Models.CreateEvent

@{
    ViewData["Title"] = "Создание новости";
}

<!-- Start Content-->
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item active">Добавление новости</li>
                    </ol>
                </div>
                <h4 class="page-title">Добавление новости</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <form asp-action="CreateEvent" method="post">
                            <div class="col-xl-6">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label"></label>
                                    <input asp-for="Title" class="form-control" placeholder="Введите заголовок новости">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Text" class="form-label"></label>
                                    <input asp-for="Text" class="form-control" placeholder="Введите описание новости">
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </div>
                                <div class="mb-0">
                                    <label asp-for="IsActive" class="form-label"></label>
                                    <select asp-for="IsActive" class="form-control">
                                        <option value="">Выберите активность новости</option>
                                        <option value="false">Не активна</option>
                                        <option value="true">Активна</option>
                                    </select>
                                    @* <input asp-for="IsActive" checked="checked" type="checkbox" /> *@
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <br />
                                    <input type="submit" value="Сохранить" class="btn btn-success" />
                                </div>
                            </div> <!-- end col-->
                        </form>

                    </div>
                    <!-- end row -->
                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div> <!-- end col-->
    </div>
    <!-- end row-->

</div> <!-- container -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
